RESET client_min_messages;
-- Test that calling twice generates proper error
\set ON_ERROR_STOP 0
CREATE EXTENSION timescaledb;
ERROR:  extension "timescaledb" has already been loaded with another version
\set ON_ERROR_STOP 1
